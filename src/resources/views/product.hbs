<link rel="stylesheet" href="/css/sanpham.css">
<link rel="stylesheet" href="/css/style.css">



{{>header}}
<div class="container-fluid top_menu"></div>

<div class="space">
   <div class="card-img-center wrapper_ite m-5">
    <h3 class="card-title text-center">Wellcome to product</h3>
    <nav aria-label="breadcrumb" class="dis_flc">
      <ol class="breadcrumb dis_flcite">
        <li class="breadcrumb-item"><a href="/" class="txt_while">TRANG CHỦ</a></li>
        <li class="breadcrumb-item active text-black" aria-current="page">PRODUCT</li>
      </ol>
    </nav>
  </div>
</div>

<section id="products" class="mt-3">
  <div class="container">
    <div class="btn-group">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" data-display="static"
        aria-haspopup="true" aria-expanded="false">
        ---
      </button>
      <div class="float-right">
        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
          <button class="dropdown-item" type="button"><a href="/product?sort=1">Sắp xếp giá: tăng dần</a></button>
          <button class="dropdown-item" type="button"><a href="/product?sort=-1">Sắp xếp giá: giảm dần</a></button>
        </div>
      </div>
    </div>

    <div class="row pt-3">
      {{#each product}}
      <div class="container_all">
        <div class="container">
          <div class="card">
            <div class="imgBx">
              <img src="/{{this.avatar}}">
            </div>
            <div class="contentBx">
              <h4>{{this.name}}</h4>
              <div class="size">
                <h4>{{this.price}} VND</h4>
              </div>
              <a href="/products/{{this.slug}}">Detail product</a>
              <a href="/me/add-to-cart/{{this._id}}">Add to card</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<div class="clearfix"></div>
<!--Pagination-->
<nav aria-label="Page navigation example" class="pagi_sp">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="/product?page=1&sort={{sort}}">1</a></li>
    <li class="page-item"><a class="page-link" href="/product?page=2&sort={{sort}}">2</a></li>
    <li class="page-item"><a class="page-link" href="/product?page=3&sort={{sort}}">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>


