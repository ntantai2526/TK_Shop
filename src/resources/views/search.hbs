<!-- products section -->
<section id="products" class="mt-3">
  <div class="container">
    <div class="d-flex flex-row mt-4 mb-4">
      <div class="text-muted m-2" id="res"></div>
      <div class="ml-auto mr-lg-4">
        <div id="sorting" class="border rounded p-1 m-1">
          <span class="text-muted">Hiển thị một kết quả duy nhất</span>
          <select name="sort" id="sort" class="selectSP">
            <option value="popularity"><b>Thứ tự theo giá: thấp đến cao</b></option>
            <option value="prcie"><b>Thứ tự theo giá: cao xuống thấp</b></option>
          </select>
        </div>
      </div>
    </div>

    <div class="row pt-3">
      {{#each product}}
      <div class="container_all">
        <div class="container">
          <div class="card">
            <div class="imgBx">
              <img src="/{{this.avatar}}">
            </div>
            <div class="contentBx">
              <h4>{{this.name}}</h4>
              <div class="size">
                <h4>{{this.price}} VND</h4>
              </div>
              <a href="/products/{{this.slug}}">Detail product</a>
              <a href="/me/add-to-cart/{{this._id}}">Add to card</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

