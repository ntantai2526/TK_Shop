<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Admin Dashboard</title>
	<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
	<link rel="stylesheet" href="../css/admin.css">
</head>
<body>
	<div class="container-admin">
		<div class="navigation-admin">
			<ul class="ul-nav-admin">
				<li>
					<a href="/">
						<span class="icon-admin"><i class="fa fa-apple" aria-hidden="true"></i></span>
						<span class="title-admin"><h2 class="h2-admin">Admin</h2></span>
					</a>
					<hr>
				</li>
				<li>
					<a href="/admin/">
						<span class="icon-admin"><i class="fa fa-home" aria-hidden="true"></i></span>
						<span class="title-admin">DashBoard</span>
					</a>
				</li>
				<li>
					<a href="/admin/store-account">
						<span class="icon-admin"><i class="fa fa-users" aria-hidden="true"></i></span>
						<span class="title-admin">Customer</span>
					</a>
				</li>
				<li>
					<a href="/admin/store-product">
						<span class="icon-admin"><i class="fa fa-comment" aria-hidden="true"></i></span>
						<span class="title-admin">Product</span>
					</a>
				</li>
				<li>
					<a href="/admin/store-bill">
						<span class="icon-admin"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
						<span class="title-admin">Bill</span>
					</a>
				</li>
				<li>
					<a href="#">
						<span class="icon-admin"><i class="fa fa-cog" aria-hidden="true"></i></span>
						<span class="title-admin">Settings</span>
					</a>
				</li>
				<li>
					<a href="#">
						<span class="icon-admin"><i class="fa fa-lock" aria-hidden="true"></i></span>
						<span class="title-admin">Password</span>
					</a>
				</li>
				<li>
					<a href="/me/logout">
						<span class="icon-admin"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
						<span class="title-admin">Sign Out</span>
					</a>
				</li>
			</ul>
		</div>
	</div>

	<div class="main main-admin">
		<div class="topbar-admin">
			<div class="toggle-admin" onclick="toggleMenu()">
				<i class="toggle-bars fa fa-bars" aria-hidden="true"></i>
			</div>
			<div class="search">
				<label>
					<input type="text" name="" id="" placeholder="search here">
					<i class="fa fa-search" aria-hidden="true"></i>
				</label>
			</div>
				<div class="user-admin">
					{{#if avatar}}
						<img id="avatar" src="../{{this.avatar}}" alt="anh">
					{{/if}}
				</div>
		</div>
