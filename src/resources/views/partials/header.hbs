<div class="wrapper">
	<nav>
		<input type="checkbox" id="show-search" />
		<input type="checkbox" id="show-menu" />
		<label for="show-menu" class="menu-icon"><i class="fas fa-bars"></i></label>
		<div class="content">
			<div class="logo"><a href="/"><p class="logo-1">
      TKShop
    </p></a></div>
			<ul class="links">
				<li><a href="/">TRANG CHỦ</a></li>
				<li><a href="/gioithieu/">GIỚI THIỆU</a></li>
				<li>
					<a href="/product/" class="desktop-link">SẢN PHẨM</a>
					<input type="checkbox" id="show-features" />
					<label for="show-features">SẢN PHẨM</label>
					<ul>
						<li><a href="/product/">ĐIỆN THOẠI</a></li>
						<li><a href="/product/">PHỤ KIỆN</a></li>
					</ul>
				</li>
				<li>
					<a href="#" class="desktop-link">HỖ TRỢ</a>
					<input type="checkbox" id="show-services" />
					<label for="show-services">HỖ TRỢ</label>
					<ul>
						<li><a href="#">CHÍNH SÁCH BẢO HÀNH</a></li>
					</ul>
				</li>
			</ul>
		</div>
		<div>
			<label for="show-search" class="search-icon"><i
					class="fas fa-search"
				></i></label>
			{{#if login}}
				<div class="btn-group" style="z-index: 1000;">
					<button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
						My Account
					</button>
					<div class="dropdown-menu dropdown-menu-lg-right">
						<a class="dropdown-item" href="/me/profile">Profile</a>
						<a class="dropdown-item" href="/me/logout">Logout</a>
					</div>
				</div>
			{{else}}
				<div class="btn-group"  style="z-index: 1000;">
					<button type="button" class="btn btn-outline-light dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
						<i class="fa fa-user"></i>
					</button>
					<div class="dropdown-menu dropdown-menu-lg-right">
						<a class="dropdown-item" href="/me/login">Login</a>
						<a class="dropdown-item" href="/me/register">Register</a>
					</div>
				</div>
			{{/if}}
		</div>
		<form action="/search" class="search-box" method="GET">
			<input
				type="text"
				name="key"
				placeholder="Type Something to Search..."
				required
			/>
			<button type="submit" class="go-icon"><i
					class="fas fa-long-arrow-alt-right"
				></i></button>
		</form>
		
	</nav>
</div>
